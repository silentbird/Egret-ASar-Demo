{
   "version": "2.0.0",
   "command": "egret",
   "tasks": [
      {
         "type": "shell",
         "label": "build",
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
         },
         "args": [
            "build",
            "-sourcemap"
         ],
         "problemMatcher": "$tsc"
      },
      {
         "type": "shell",
         "label": "clean",
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
         },
         "args": [
            "build",
            "-e"
         ],
         "problemMatcher": "$tsc"
      },
      {
         "type": "shell",
         "label": "publish",
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
         },
         "args": [
            "publish"
         ],
         "problemMatcher": "$tsc"
      }
   ]
}